{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ES2017",
    "module": "commonjs",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "outDir": "./dist"
  },
  "include": ["./src/**/*", "./lib/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
